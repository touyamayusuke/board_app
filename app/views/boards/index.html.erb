<div class="d-flex align-items-center">
  <h1>掲示板一覧</h1>
  <div class="ms-auto boards__linkBox">
    <%= form_with url: boards_path, method: :get, scope: nil, local: true, class: 'boards__searchForm' do %>
      <%= select_tag :tag_id,
            options_for_select([['タグで絞り込み','']]) +
            options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]),
            class: 'form-control boards__select',
            onchange: 'this.form.submit();' 
      %>
    <% end %>
  </div>
    <%= link_to '新規作成', new_board_path, class: 'btn btn-outline-dark' %>
  </div>
</div>
<% if flash[:notice] %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>
<table class="table table-hover boards__table">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.id %></td>
        <td><%= board.title %></td>
        <td><%= board.author_name %></td>
        <td><%= board.created_at.to_formatted_s(:default_jp) %></td>
        <td><%= board.updated_at.to_formatted_s(:default_jp) %></td>
        <td><%= link_to '詳細', board, class: 'btn btn-outline-dark' %></td>
        <td><%= button_to '削除', board, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-outline-dark' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @boards %>