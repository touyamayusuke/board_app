<h1>ログイン</h1>

<%= form_with scope: :session, url: login_path, method: :post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, 'ユーザー名' %>
    <%= f.text_field :name, class: 'form-control mb-3' %>
  </div>
  <div class="form-group">
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password, class: 'form-control mb-3' %>
  </div>
  <%= f.submit 'ログイン', class: 'btn btn-primary' %>
<% end %>